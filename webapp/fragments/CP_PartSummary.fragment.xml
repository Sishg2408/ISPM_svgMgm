<core:FragmentDefinition xmlns:m="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table">

    <m:VBox >
        <t:Table id="myTable" visibleRowCount="7" selectionMode="MultiToggle" ariaLabelledBy="title" rowHeight="50px" rows="{oTable>/getPartsDataBySupplierNumber}">

            <t:columns>

                <!-- <t:Column width="7rem">
                    <m:Label text="Product Name" />
                    <t:template>
                        <m:Text text="" wrapping="false" />
                    </t:template>
                </t:Column> -->
                <t:Column width="6rem">
                    <m:Label text="Part Number" />
                    <t:template>
                        <m:Text text="{oTable>partNum}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="7.5rem">
                    <m:Label text="Part Description" />
                    <t:template>
                        <m:Text text="{oTable>partDesc}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="18rem">
                    <m:Label text="Current Supplier Price in Supplier Currency" />
                    <t:template>
                         <m:Text text="{oTable>priceSuppCurr}" id="pricenewsupply" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="18rem">
                    <m:Label text="New Supplier Price in Supplier Currency" />
                    <t:template>
                        <m:Input value="{oTable>newSupply}" id ="parampsc" />
                    </t:template>
                </t:Column>
                <t:Column width="7rem">
                    <m:Label text="Pricing Unit" />
                    <t:template>
                        <m:Text text="{oTable>pricingUnit}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="9rem">
                    <m:Label text="Supplier Currency" />
                    <t:template>
                        <m:Text text="{oTable>suppCurrency}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="6rem">
                    <m:Label text="UOM Code" />
                    <t:template>
                        <m:Text text="{oTable>uom}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="9rem">
                    <m:Label text="Quantity Receipted" />
                    <t:template>
                        <m:Input value="{oTable>quantity}"  id ="paramsob"  />
                    </t:template>
                </t:Column>
                <t:Column width="20rem">
                    <m:Label text="Original Total Extended Standard Material Cost" />
                    <t:template>
                        <m:Text text="{parts:['oTable>priceSuppCurr','oTable>quantity'], formatter:'.formatter.originalMat'}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="18rem">
                    <m:Label text="New Total Extended Standard Material Cost" />
                    <t:template>
                        <m:Text text="{parts:['oTable>newSupply','oTable>quantity'], formatter:'.formatter.newTotMaterial'}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column width="6rem">
                    <m:Label text="Total Savings" />
                    <t:template>
                        <m:ObjectNumber number="{parts:['oTable>newSupply','oTable>quantity','oTable>priceSuppCurr','oTable>quantity'], formatter:'.formatter.totMat'}" state="{parts:['oTable>newSupply','oTable>quantity','oTable>priceSuppCurr','oTable>quantity'], formatter:'.formatter.profitcolor'}"/>
                    </t:template>
                </t:Column>





            </t:columns>
            <!-- <items>
                <t:ColumnListItem>
                    <cells>
                       
                        

                    </cells>
                </t:ColumnListItem>
            </items> -->
        </t:Table>
        <m:HBox visible="{= ${oAppModel>/Mode} === 'CREATE' ? true : false}">
            <m:Button text="{i18n>ADD}" icon="sap-icon://add" press="onAddMaterial" class="sigBtnDefault sapUiSmallMarginEnd" type="Default"/>
        </m:HBox>
    </m:VBox>




</core:FragmentDefinition>