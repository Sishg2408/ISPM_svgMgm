<mvc:View controllerName="com.svg.cwispm.controller.ProjectCreation"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page showHeader="false" enableScrolling="true" class="sigPage">
        <content>
            <VBox class="sapUiSmallMargin">

                <IconTabBar id="CreateProjectIconTab" class="sigIconTabBar" select="onCreateProjTabSelect">
                    <items>
                        <IconTabFilter text="1. Project Header" key="ProjectHeader">
                            <core:Fragment fragmentName="com.svg.cwispm.fragments.CP_ProjectHeader" type="XML"/>
                        </IconTabFilter>
                        <IconTabFilter text="2. Milestones" key="MatList">
                            <core:Fragment fragmentName="com.svg.cwispm.fragments.CP_MilesStones" type="XML"/>
                        </IconTabFilter>
                        <IconTabFilter text="3. Parts Summary" key="MatDetail">
                            <core:Fragment fragmentName="com.svg.cwispm.fragments.CP_PartSummary" type="XML"/>
                        </IconTabFilter>
                    </items>
                </IconTabBar>
            </VBox>
        </content>
        <footer>
            <core:Fragment fragmentName="com.svg.cwispm.fragments.CP_FooterAction" type="XML"/>
        </footer>

    </Page>
</mvc:View>
